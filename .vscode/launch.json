{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/Main",  // Chemin vers l'exécutable à lancer
            "args": [],  // Arguments à passer au programme
            "stopAtEntry": false,  // Si true, le programme s'arrête au premier point d'entrée
            "cwd": "${workspaceFolder}",  // Répertoire de travail (généralement le dossier du projet)
            "environment": [],  // Variables d'environnement à définir
            "externalConsole": true,  // Si true, ouvre une console externe pour l'exécution
            "MIMode": "gdb",  // Le débogueur utilisé, ici gdb
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",  // Chemin vers le débogueur
            "preLaunchTask": "C/C++: g++ build active file",  // Tâche à exécuter avant de lancer le débogage
            "postDebugTask": "",  // Tâche à exécuter après le débogage
            "serverStarted": "",  // Peut être utilisé pour attendre un processus externe avant de commencer à déboguer
            "filterStderr": true,  // Si true, filtre les erreurs du programme
            "filterStdout": false  // Si true, filtre la sortie standard du programme
        }
    ]
}
